{
  "manifest_version": 3,
  "name": "YouTube Summarizer",
  "version": "1.1",
  "description": "Gera resumos e transcrições de vídeos do YouTube usando IA",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "host_permissions": ["*://*.youtube.com/*", "http://212.85.23.16:5050/*", "https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ]
} 